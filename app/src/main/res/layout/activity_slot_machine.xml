<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slotmachine"
    tools:context=".slotmachine.SlotMachineActivity">

    <android.support.constraint.Guideline
        android:id="@+id/horizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.470" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.11" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.625" />

    <Button
        android:id="@+id/btnSpin"
        android:layout_width="134dp"
        android:layout_height="74dp"
        android:layout_marginStart="516dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivSlot1"
        android:layout_width="164dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline"
        app:srcCompat="@drawable/cherry" />

    <ImageView
        android:id="@+id/ivSlot2"
        android:layout_width="164dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline"
        app:srcCompat="@drawable/dollar" />

    <ImageView
        android:id="@+id/ivSlot3"
        android:layout_width="164dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline"
        app:srcCompat="@drawable/star" />



</android.support.constraint.ConstraintLayout>